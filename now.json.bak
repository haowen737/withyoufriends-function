{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@now/static" },
    { 
      "src": "api/article/list.js", 
      "use": "@now/node",
      "config": {
        "includeFiles": [
          "doc/**"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/api/article/list", "dest": "api/article/list.js" },
    { "src": "/", "headers": {"cache-control": "s-maxage=1000"}, "dest": "/index.html" }
  ]
}
